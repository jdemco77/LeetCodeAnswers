class Solution(object):
    def checkPossibility(self, nums):
        """
        :type nums: List[int]
        :rtype: bool
        """
        
        count = 0
        n=len(nums)
        k=0
        
        while k < n-1:
            if nums[k]>nums[k+1]:
                count+=1
            k+=1   
            
        if count > 1:
            return False
        else:
            return True
        
        
ob1 = Solution()
print(ob1.checkPossibility([4,2,3,5]))
